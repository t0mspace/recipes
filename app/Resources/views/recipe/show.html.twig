{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recipe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>

            <tr>
                <img src="{{ asset('images/'~recipe.picture.finalFileName) }}" width="258px" height="193px">
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Difficultylevel</th>
                <td>{{ recipe.difficultyLevel }}</td>
            </tr>
            <tr>
                <th>Peparationtime</th>
                <td>{{ recipe.peparationTime }}</td>
            </tr>
            <tr>
                <th>Cookingtime</th>
                <td>{{ recipe.cookingTime }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ recipe.cost }}</td>
            </tr>
            <tr>
                <th>Fornbrepeople</th>
                <td>{{ recipe.forNbrePeople }}</td>
            </tr>
            <tr>
                <th>Howmake</th>
                <td>{{ recipe.howMake }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recipe_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('recipe_edit', { 'id': recipe.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
