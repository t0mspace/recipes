{% extends 'admin/layout.html.twig' %}

{% block main %}
    <h1>Recipes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Difficultylevel</th>
                <th>Peparationtime</th>
                <th>Cookingtime</th>
                <th>Cost</th>
                <th>Fornbrepeople</th>
                <th>Howmake</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td><a href="{{ path('recipe_show', { 'id': recipe.id }) }}">{{ recipe.id }}</a></td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.slug }}</td>
                <td>{{ recipe.difficultyLevel }}</td>
                <td>{{ recipe.peparationTime }}</td>
                <td>{{ recipe.cookingTime }}</td>
                <td>{{ recipe.cost }}</td>
                <td>{{ recipe.forNbrePeople }}</td>
                <td>{{ recipe.howMake }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('recipe_show', { 'id': recipe.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('recipe_edit', { 'id': recipe.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('recipe_delete', { 'id': recipe.id }) }}">delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recipe_add') }}">Create a new recipe</a>
        </li>
    </ul>
{% endblock %}
